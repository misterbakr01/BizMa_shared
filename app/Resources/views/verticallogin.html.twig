{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}

    <div class="list-group login">
        {% if error is defined %}
            {% if error is not null %}
                <div class="alert alert-info">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        {% endif %}
        <div class="list-group-item active">
            <h4 class="list-group-item-heading text-center"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span> Se connecter</h4>
        </div>
        <div class="list-group-item">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" class="form-control active" name="_username" value="{% if last_username is defined %}{{ last_username }}{% endif %}" required="required" />

                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" class="form-control" name="_password" required="required" />

                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                <input type="submit" id="_submit" name="_submit" class="btn btn-success btn-block" value="{{ 'security.login.submit'|trans }}" />
            </form>
            <div>
                <p>Si vous n'êtes pas encore inscrit, <a href="{{ path('fos_user_registration_register') }}">créez un compte.</a></p>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}