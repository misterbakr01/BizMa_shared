{% trans_default_domain 'FOSUserBundle' %}
<title>{{ user.username }} - Studima</title>
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
            <a href="{{ path('fos_user_profile_edit') }}" >Edit Profile</a>

            <a href="{{ path('fos_user_security_logout') }}" >Logout</a>
            <br>
            <p class="text-info">{{ user.lastlogin|date }}</p>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ user.username }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="{{ asset('uploads/profilepics/' ~ user.profilePicturePath) }}" class="img-circle img-responsive"> </div>
                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                <tr>
                                    <td>Department:</td>
                                    <td>Programming</td>
                                </tr>
                                <tr>
                                    <td>Hire date:</td>
                                    <td>06/23/2013</td>
                                </tr>
                                <tr>
                                    <td>Date of Birth</td>
                                    <td>01/24/1988</td>
                                </tr>

                                <tr>
                                <tr>
                                    <td>Gender</td>
                                    <td>Male</td>
                                </tr>
                                <tr>
                                    <td>Description</td>
                                    <td>{{ user.description }}</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td><a href="mailto:{{ user.emailCanonical }}">{{ user.emailCanonical }}</a></td>
                                </tr>
                                <tr>
                                <td>Phone Number</td>
                                <td>123-4567-890(Landline)<br><br>555-4567-890(Mobile)
                                </td>
                                </tr>
                                <tr>
                                <td>Posts</td>
                                <td>
                                    {% for userpost in user.posts %}
                                        <a href="{{ path('_showpost',{id:userpost.id}) }}">{{ userpost.title }}</a><br>
                                    {% endfor %}
                                </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}