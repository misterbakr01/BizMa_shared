{% extends 'AdminBundle:Default:index.html.twig' %}

{% block title %}

{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12 connectedSortable ui-sortable">
            <div class="box">
                <div class="box-header">
                    <i class="fa fa-suitcase"></i>
                    <h3 class="box-title">Points d'intérêt :</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table">
                        <thead>
                            <tr>
                                <th>Identifiant d'utilisateur :</th>
                                <th>Nom d'utilisateur :</th>
                                <th>Email :</th>
                                <th>Roles :</th>
                                <th>La dernière connexion :</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                {% for role in user.roles %}
                                {{ role }}
                                {% endfor %}
                                </td>
                                <td>{{ user.lastLogin|date('m/d/Y') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}

{% block javascripts_inline %}
    <script>
        $(function () {
            $('#example1').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "aLengthMenu": [[5, 10, 20, -1], [5, 10, 20, "All"]],
                "iDisplayLength": 5
            });
        });
    </script>
{% endblock %}