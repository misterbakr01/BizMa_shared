<div class="grid">
    {% block verticallogin %}
        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div class="col-sm-6 col-md-4 item">
                {% include 'verticallogin.html.twig' %}
            </div>
        {% endif %}
    {% endblock %}
    {% for business in businesses %}
        <div class="col-sm-6 col-md-4 item">
            <div class="thumbnail">
                <a href="{{ path('_showbusiness',{id : business.id}) }}">
                    <img src="{{ asset('uploads/businesses/')~business.image }}" alt="{{ business.name }}">
                </a>
                <div class="caption">
                    <h3>{{ business.name }}</h3>
                    <p>{{ business.description|raw }}</p>
                    <p><a href="{{ path('_showbusiness',{id : business.id}) }}" class="btn btn-primary btn-block" role="button">Learn More</a> <a href="#" class="btn btn-default btn-block" role="button">Plan Route</a></p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>